{
    "name": "Urlify 短链接工具",
    "description": "快速生成短连接工具",
    "version": "1.0.3",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "https://urlify.cn/"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "background":
    {
        "scripts": ["background.js"]
    },
    "manifest_version": 2,
    "content_scripts": [
    {
        "css": [
            "urlify.css"
        ],
        "js": [
            "urlify.js"
        ],
        "matches": [
            "http://*/*",
            "https://*/*"
        ]
    }],
    "icons":
    {
        "128": "urlify.png"
    },
    "browser_action":
    {
        "default_icon": "urlify.png",
        "default_title": "Urlify 短链接工具"
    }
}